apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: apps
  namespace: {{ argocd_namespace }}
spec:
  project: default
  source:
    repoURL: "{{ argocd_gitops_repo_url }}"
    targetRevision: "{{ argocd_gitops_repo_revision }}"
    path: "{{ argocd_gitops_repo_path }}"
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ argocd_namespace }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
