apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ argocd_graphics_app_name }}
  namespace: {{ argocd_namespace }}
spec:
  project: default
  source:
    repoURL: "{{ argocd_graphics_repo_url }}"
    targetRevision: "{{ argocd_graphics_repo_revision }}"
    path: "{{ argocd_graphics_repo_path }}"
    helm:
      values: |
{{ argocd_graphics_values | to_nice_yaml(indent=2) | indent(8, first=True) }}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ argocd_graphics_namespace }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
