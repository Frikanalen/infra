apiVersion: v1
kind: Secret
metadata:
  name: "{{ argocd_django_db_secret_name }}"
  namespace: "{{ argocd_django_namespace }}"
type: Opaque
stringData:
  superUserPassword: "{{ vault_dev_django_postgres_super_password }}"
  replicationUserPassword: "{{ vault_dev_django_postgres_replication_password }}"
  djangoPassword: "{{ vault_dev_django_postgres_django_password }}"
  DATABASE_URL: "postgresql://{{ argocd_django_db_user }}:{{ vault_dev_django_postgres_django_password }}@{{ argocd_django_db_host }}:{{ argocd_django_db_port }}/{{ argocd_django_db_name }}"
