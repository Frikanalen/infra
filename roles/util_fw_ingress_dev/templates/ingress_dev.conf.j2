# {{ ansible_managed }}
# Kubernetes dev cluster ingress port forwarding rules

dev_ingress_ext_ip = "{{ dev_ingress_ext_ip }}"
dev_ingress_int_ip = "{{ dev_ingress_int_ip }}"

# HTTP/HTTPS
rdr on vtnet1 proto tcp from any to $dev_ingress_ext_ip port { 80, 443 } -> $dev_ingress_int_ip
pass in quick on vtnet1 proto tcp from any to $dev_ingress_int_ip port { 80, 443 }
