$TTL {{ dns_soa_minimum }}
@   IN SOA  {{ dns_soa_mname }} {{ dns_soa_rname }} (
        {{ dns_soa_serial }} ; serial
        {{ dns_soa_refresh }} ; refresh
        {{ dns_soa_retry }}   ; retry
        {{ dns_soa_expire }}  ; expire
        {{ dns_soa_minimum }} ; minimum
)

{% for ns in dns_ns_records %}
    IN NS   {{ ns }}
{% endfor %}

; Name server A record(s)
ns1 IN A {{ dns_ns1_address }}

; Host A records generated from dc1_hosts.host_config
{% for hostname, data in hosts.items() %}
{% if data.ip_cidr is defined %}
{{ hostname }}    IN A    {{ data.ip_cidr.split('/')[0] }}
{% endif %}
{% endfor %}

